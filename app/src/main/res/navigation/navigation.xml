<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/globalTargetsFragment">

    <fragment
        android:id="@+id/globalTargetsFragment"
        android:name="ru.kazakova_net.mytargets.globaltargets.GlobalTargetsFragment"
        android:label="GlobalTargetsFragment" >
        <action
            android:id="@+id/action_globalTargetsFragment_to_addNewTargetFragment"
            app:destination="@id/addNewTargetFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewTargetFragment"
        android:name="ru.kazakova_net.mytargets.addnewtarget.AddNewTargetFragment"
        android:label="AddNewTargetFragment" >
        <argument
            android:name="targetId"
            app:argType="long" />
        <action
            android:id="@+id/action_addNewTargetFragment_to_globalTargetsFragment"
            app:destination="@id/globalTargetsFragment"
            app:launchSingleTop="false"
            app:popUpTo="@+id/globalTargetsFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>